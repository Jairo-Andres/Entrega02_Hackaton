<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">


    <!-- Imagen de fondo -->
    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/fondo_principal"/>

    <!-- Rectángulo blanco para el inicio de pantalla -->
    <View
        android:id="@+id/start_rect"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/colorSecundary"
        android:layout_alignParentTop="true"/>

    <!-- Logo de la app -->

    <!-- Botón de iniciar sesión -->

    <!-- Botón de registrarse -->

    <!-- Rectángulo blanco para el final de pantalla -->

    <ImageView
        android:id="@+id/image_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:src="@drawable/logo_remasterizado" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_logo"
        android:layout_marginStart="30dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/custom_button"
        android:text="Iniciar Sesión"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_login"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/custom_button"
        android:text="Registrarse"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <View
        android:id="@+id/end_rect"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/colorSecundary"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
