<!-- res/layout/list_item_cardview.xml -->

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <!-- Content for the CardView item -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/PropietaryPlaceImage"
            android:layout_height="150dp"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/PropietaryPlaceName"
            android:padding="8dp"
            android:text="Text for the CardView"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:src="@drawable/edit_icon"
            android:contentDescription="@string/edit_touristic_place"
            android:layout_gravity="end|bottom"
            android:layoutDirection="ltr"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/viewReviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:contentDescription="@string/view_reviews"
            android:src="@drawable/ic_view_reviews"
            android:layout_gravity="end|bottom"
            android:layoutDirection="ltr"
            android:layout_marginTop="8dp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
